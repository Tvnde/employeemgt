    </head>

    <body>
        <nav class="navbar fixed-top navbar-expand-lg navbar-light wholenav" id="navbar-changes">
               
            <a class="oner" style="text-decoration:none; color:white" href="#"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
          
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <%if(user.user_type==0){%>
                <ul class="navbar-nav ml-auto">
                  <li class="nav-item active hvr-sweep-to-top">
                    <a class="nav-link" style="text-decoration:none; color:white" href="/admin/dashboard">Dashboard<span class="sr-only">(current)</span></a>
                  </li>
                  <li class="nav-item dropdown dropdown-slide dropdown-hover hvr-sweep-to-top">
                      <a class="nav-link" id="navbarDropdownMenuLink" data-toggle="dropdown" style="text-decoration:none; color:white" href="#"><div class="notifications"><i class="far fa-bell fa-1x"></i><span><%=counter%></span></div>Notificatons</a>
                      <div class="dropdown-menu dropdown-menu-center" aria-labelledby="navbarDropdownMenuLink">
                          <%for(var i=0; i< notifications.length; i++){
                              if(notifications[i].TypeID==3){%>
                               <a href="/admin/viewleavereq/<%=notifications[i].id%>" class="dropdown-item"><i class="fas fa-sign-out-alt"></i><div>Leave Request by <%=notifications[i].Sender.name%></div><hr></a>
                              <%}
                          }%>
                        </div>
                      </li>
                      <li class="nav-item dropdown hvr-sweep-to-top dropdown-slide dropdown-hover">
                          <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" data-toggle="dropdown" style="text-decoration:none; color:white" href="#"><div class="notifications"><img src="../assets/img/staff-icon.png" width="70%"/></div><%=user.name%></a>
                          <div class="dropdown-menu dropdown-menu-center" aria-labelledby="navbarDropdownMenuLink">
                              <a class="dropdown-item" href="/admin/company_profile">Company Profile</a><hr>
                              <a class="dropdown-item" href="/admin/messages">Messages</a><hr>
                              <a class="dropdown-item" href="/logout">Logout</a>
                          </div>
                        </li>
                    </ul>
                    <%}else if(user.user_type==2){%>
                      <ul class="navbar-nav ml-auto">
                          <li class="nav-item active hvr-sweep-to-top">
                            <a class="nav-link" style="text-decoration:none; color:white" href="/hr/dashboard">Dashboard<span class="sr-only">(current)</span></a>
                          </li>
                          <li class="nav-item dropdown dropdown-slide dropdown-hover hvr-sweep-to-top">
                              <a class="nav-link" id="navbarDropdownMenuLink" data-toggle="dropdown" style="text-decoration:none; color:white" href="#"><div class="notifications"><i class="far fa-bell fa-1x"></i><span><%=counter%></span></div>Notificatons</a>
                              <div class="dropdown-menu dropdown-menu-center" aria-labelledby="navbarDropdownMenuLink">
                                  <%for(var i=0; i< notifications.length; i++){
                                      if(notifications[i].TypeID==3){%>
                                       <a href="/admin/viewleavereq/<%=notifications[i].id%>" class="dropdown-item"><i class="fas fa-sign-out-alt"></i><div>Leave Request by <%=notifications[i].Sender.name%></div><hr></a>
                                      <%}
                                  }%>
                                </div>
                              </li>
                                <li class="nav-item dropdown hvr-sweep-to-top dropdown-slide dropdown-hover">
                                    <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" data-toggle="dropdown" style="text-decoration:none; color:white" href="#"><div class="notifications"><img src="../assets/img/staff-icon.png" width="70%"/></div><%=user.name%></a>
                                    <div class="dropdown-menu dropdown-menu-center" aria-labelledby="navbarDropdownMenuLink">
                                        <a class="dropdown-item" href="/hr/company_profile">Company Profile</a><hr>
                                        <a class="dropdown-item" href="/hr/messages">Messages</a><hr>
                                        <a class="dropdown-item" href="/logout">Logout</a>
                                    </div>
                                  </li>
                            </ul>
                            <%}%>
                  </div>
            
          </nav><br><br>
          <div class="navbar navbar-dark bg-dark">
                <div class="ewk text-white">
                  <ul>
                    <li class="nav-item">Home /</li>
                    <%if(user.user_type==0){%><li class="nav-item">Admin /</li><%}else if(user.user_type==3){%><li class="nav-item">H.R.O /</li><%}%>
                    <li class="nav-item">Employees /</li>
                    <li class="nav-item">Add Employee</li>
                  </ul>
                </div>
              </div>
                  <br/><br/><br/><br/>
              <div class="all">

                  <section id="main">
                      <div class="container">
                          <div class="row">
                              <div class="col-md-3">
                                <div class="list-group">
                                    <div class="hold-image" style="margin-left: 35px;">
                                        <%if(user.user_type == 0){%><img src="../<%=employee.company_logo%>" width="200" height="200"/><%}else if(user.user_type==2){%><img src="../<%=employee.profilephoto%>" width="200" height="200"/><%}%>
                                    </div>
                                    <div class="company-name">
                                        Name: <%=user.name%>
                                    </div>
                                    <div class="role">
                                       Mail: <%=user.email%>
                                    </div>
                                    <div class="level">
                                        Username: <%=user.username%>
                                    </div>

                                  </div>
                              </div>
                              <div class="col-md-9">
                                  <div class="container">
                                        <%if(user.user_type==0){%>
                                            <a href="/admin/dashboard" style="text-decoration: none">Dashboard</a>
                                            <%}else if(user.user_type==2){%>
                                                <a href="/hr/dashboard" style="text-decoration: none">Dashboard</a>
                                                <%}%>
                                  </div>
                                <div class="card">
                                  <h5 class="card-header bg-dark text-white text-center">Add Employee</h5>
                                  <div class="card-body">
                                        <%if(user.user_type==0){%><form action="/admin/addstaff" method="POST" enctype="multipart/form-data"><%}else if(user.user_type==2){%><form action="/hr/addstaff" method="POST" enctype="multipart/form-data"><%}%>
                                            <div class="form-row">
                                                <div class="form-group col-md-6">
                                                    <input type="text" name="f_name" class="form-control" placeholder="First Name"/>
                                                </div>
                                                <div class="form-group col-md-6">
                                                    <input type="text" name="l_name" class="form-control" placeholder="Last Name"/>
                                                </div>
   
                                            </div>
                                            <div class="form-row">
                                                <div class="form-group col-md-4">
                                                   <select name="gender" class="form-control">
                                                       <option value="male">MALE</option>
                                                       <option value="female">FEMALE</option>
                                                   </select>
                                                </div>
                                                <div class="form-group col-md-4">
                                                   <input name = "dob" type="date" class="form-control" placeholder="Date Of Birth"/>
                                                 </div>
                                                 <div class="form-group col-md-4">
                                                   <%if(departments.length==1){%>
                                                    <select name="department" class="form-control">
                                                        <option value="<%=departments[0].name%>" selected><%=departments[0].name%></option>
                                                    </select> 
                                                  <%}else{%>
                                                   <select name="department" class="form-control">
                                                      <option value="" selected disabled>Select Department</option>
                                                     <% for(var u=0; u< departments.length; u++){%>
                                                          <option value="<%=departments[u].name%>"><%=departments[u].name%></option>
                                                      <%}%>
                                                   </select><%}%>
                                                 </div>
                                            </div>
                                            <div class="form-row">
                                                <div class="form-group col-md-6">
                                                       <input name = "email" type="email" class="form-control" placeholder="Valid Email"/>
                                                </div>
                                                 <div class="form-group col-md-6">
                                               <input type="file" name="profilephoto" class="form-control" required/>
   
                                                </div>
                                            </div>
                                            <div class="form-row">
                                                <div class="form-group col-md-6">
                                                    <input type="text" name = "mobile" class="form-control" placeholder="Mobile Number" required/>
                                                </div>
                                                <div class="form-group col-md-6">
                                                    <input type="submit" class="btn btn-outline-info main-color-bg btn-small"/>
                                                </div>
                                            </div>
                                        </form>
                                 
                                  </div>
                                </div>
                                <div class="container">
                                    <%if(user.user_type==0){%><a href="/admin/staffs" style="text-decoration: none; float: right">Back to Employee List</a><%}else if(user.user_type==2){%><a href="/hr/staffs" style="text-decoration: none; float: right">Back to Employee List</a><%}%>
                                </div>
                              </div>
                          </div>
                      </div>
                  </section>
                  </div>
                  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
                  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
                  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
                  </body>
