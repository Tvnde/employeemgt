                  <section id="main">
                      <div class="container bg-light">
                          <%-messages('message', locals) %>
                          <div class="container compan-logo">
                              <img src="../<%=company.company_logo%>" style="width: 120px;"/>
                              <h3 class="d-inline pt-2"><%=company.name%></h3>
                              <h5 class="d-inline"><small><i><%=company.address%></i></small></h5>
                          </div>
                          <div class="container employee-details">
                              <div class="card">
                                  <h5 class="card-header bg-light">
                                      Employee Details
                                  </h5>
                                  <div class="card-body bg-light">
                                      <table id="employee-table" class="table table-bordered display">
                                          
                                              <tr>
                                                  <td style="width: 20%;">Name</td>
                                                  <td><%=employee.name%></td>
                                              </tr>
                                              <tr>
                                                  <td style="width: 20%;">EmployeeID</td>
                                                  <td><%=employee.username%></td>
                                              </tr>
                                              <tr>
                                                  <td style="width: 20%">Email</td>
                                                  <td><%=employee.email%></td>
                                              </tr>
                                              <tr>
                                                <td style="width: 20%">Department</td>
                                                <td><%=employee.department%></td>
                                            </tr>
                                            <tr>
                                                <td style="width: 25%">Employee Type</td>
                                                <td>Level <%=employee.level%></td>
                                            </tr>
                                          </tbody>
                                      </table>
                                  </div>
                              </div>
                          </div>

                          <div class="container payroll-details">
                              <table id="example" class="display nowrap table-bordered" style="width: 50%; font-size:14px;">
                                <thead>
                                    <tr>
                                        <th style="text-align: center">Allowances</th>
                                        <th style="text-align: center">Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <%for(var key in salary.Allowances){%>
                                        <tr>
                                            <td style="width: 40%; text-align: center"><%=key%></td>
                                            <td style="text-align: center"><%=salary.Allowances[key]%></td>
                                        </tr>
                                    <%}%>
                                </tbody>
                            
                            </table>
                          </div>
                          
                      </div>
                     
