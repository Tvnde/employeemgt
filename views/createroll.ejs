              <script>
                  var i=0;
                  function incr(){
                      $('.hold-form').append('<br><div class="form-row"><div class="form-group text-white"><label for="allowance">Allowance</label><br>For: <input type="text" class="form-control hold-button" name=allowance'+i+'><br>Amount: <div class="holde"><input type="text" class="form-control buttn-hold enter_value'+i+'" name=amount'+i+'><div id="click"><button type="button" class="btn btn-sm btn-primary naira" onclick="getter()">NGN</button><button type="button" class="btn btn-sm btn-danger percent" onclick="turnpercent('+i+')"><i class="fas fa-percentage"></i></button></div></div></div></div>');
                      i++;

                  }

                  
              </script>
