                          <div class="col-md-3">
                            <div class="list-group">
                                <div class="hold-image" style="margin-left: 15%;">
                                    <img src="../<%=employee.profilephoto%>" width="200" height="200"/>
                                </div>
                                <div class="company-name">
                                    Name: <%=user.name%>
                                </div>
                                <div class="role">
                                   HR Page
